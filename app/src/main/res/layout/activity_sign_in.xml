<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lalecon.iwashlaundry.SignIn"
    android:background="@drawable/cute"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgrect"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="3.22"
        android:src="@drawable/mylogo"
        android:layout_below="@+id/back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/textInputLayout2">

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/textInputLayout">

    </android.support.design.widget.TextInputLayout>
    <EditText
        android:drawableLeft="@drawable/ic_phone"
        android:drawableStart="@drawable/ic_phone"
        android:id="@+id/input_phone"
        android:layout_height="35dp"
        android:background="@drawable/newwhitee"
        android:layout_width="250dp"
        android:textColorHint="@color/white"
        android:hint="Phone number"
        android:textColor="@color/white"
        android:inputType="phone"
        android:layout_above="@+id/input_password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp" />
    <EditText
        android:drawableLeft="@drawable/ic_lock"
        android:drawableStart="@drawable/ic_lock"
        android:id="@+id/input_password"
        android:layout_height="35dp"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:background="@drawable/newwhitee"
        android:layout_width="250dp"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:layout_above="@+id/btn_login"
        android:layout_alignLeft="@+id/input_phone"
        android:layout_alignStart="@+id/input_phone"
        android:layout_marginBottom="73dp" />




    <android.support.v7.widget.AppCompatButton
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Login"

        android:id="@+id/btn_login"
        android:padding="12dp"
        android:textColor="#e6eaea"
        android:background="@drawable/whitee"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp" />

<ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/ic_arrow"
    android:id="@+id/back"
    />

</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="155dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp">
        <com.rey.material.widget.CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Material.Drawable.CheckBox"
            android:text="Remember Me"
            android:id="@+id/chkRemember"
            android:textColor="@color/white"
            android:gravity="center"
            android:strokeColor="@color/white"

            app:cbd_strokeColor="@android:color/white"
            app:cbd_tickColor="@color/colorPrimaryDark"
            />



    </LinearLayout>
    </RelativeLayout>
