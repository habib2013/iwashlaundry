<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lalecon.iwashlaundry">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignIn" />
        <activity android:name=".SignUp" />
        <activity
            android:name=".MainDrawer"
            android:label="@string/title_activity_main_drawer"
            android:theme="@style/AppTheme" />
        <activity android:name=".Item_sub" />
        <activity android:name=".SubcategoryList" />
        <activity android:name=".SubcategoryDetail" />
        <activity android:name=".TestDetails" />
        <activity android:name=".Cart" />
        <activity android:name=".OrderStatus" />

        <service
            android:name=".Service.ListenOrder"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".Settings"></activity>
    </application>

</manifest>